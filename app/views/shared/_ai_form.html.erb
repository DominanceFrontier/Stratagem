<h3 class="center">Upload AI</h3>
<%= form_for(@ai, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name %>
  <%= f.text_field :username, class: "form-control" %>

  <%= f.label :game %>
  <%= f.collection_select(:game_id, Game.all, :id, :name) %>
  
  <%= f.label :language %>
  <%= f.select(:language, [['Python', 1], ['Ruby', 2]]) %>

  <%= f.label "Select file:" %>
  <%= f.file_field :location, accept: 'text/plain' %>
 
  <%= f.submit "Upload", class: "btn btn-primary" %>
<% end %>
